sudo -s

curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
   $(lsb_release -cs) \
   stable"

apt-get update -y

apt-get dist-upgrade -y

apt-get install -y \
    apt-transport-https \
    ca-certificates \
    curl \
    docker-ce \
    docker-ce-cli \
    containerd.io \ 
    git \
    gnupg-agent \
    nano \
    software-properties-common

mkdir /git

cd /git

git config --global user.name "tallmantim"

git config --global user.email "tim.jones@itmasters.edu.au"

git init

git clone https://github.com/turnbullpress/dockerbook-code

git clone https:github.com/tallmantim/ite532

shutdown -h 180
